rules:
  - name: '5xx'
    expr: err_percentage > 5
    type: 'count'
    request:
      query: '{"query":{"bool":{"must":[{"range":{"code":{"gte" : 500, "lte" : 599}}},{"range":{"@timestamp":{"gt": "now-"+time}}}]}}}'
      target_index: 'nginx-access-*'

  - alert: '4xx'
    expr: err_percentage > 5
    type: 'count'
    request:
      query: '{"query":{"bool":{"must":[{"range":{"code":{"gte" : 400, "lte" : 599}}},{"range":{"@timestamp":{"gt": "now-"+time}}}]}}}'
      target_index: 'nginx-access-*'